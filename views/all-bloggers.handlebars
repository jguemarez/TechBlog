{{#if loggedIn}}
<div class="card">
    <div class="card-body">
        <p>
        <h3 class="card-title"> Hello {{username}}!</h3> 
        <em>Here is a list of all current bloggers. Click their name to see
            their posts:</em>
        </p>
{{#each allBloggers as |blogger|}}
<h2 class="card-subtitle">Blogger #{{blogger.id}}: <a  href="bloggers/{{blogger.id}}">{{blogger.username}} </a> </h2>
{{/each}}
</div>
</div>
{{/if}}

