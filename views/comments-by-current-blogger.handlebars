{{#if loggedIn}}
<div class="card">
    <div class="card-body">
        <p>
        <h3 class="card-title"> Hello {{username}}. </h3>
        <em>Here are all of your comments:</em>
        </p>
        {{#each comments as |comment|}}
        <h3>Comment for "{{post_title}}" by {{post_author}} </h3>
        {{>comment-details}}
        <a href ="/api/dashboard/comments/{{id}}/edit">Edit Your Comment</a>
        {{/each}}
    </div>
</div>
{{/if}}