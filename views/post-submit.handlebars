{{#if loggedIn}}
<div class="card">
  <div class="card-body">
    <p>
    <h3 class="card-title">Hello {{username}}! Go ahead and add a new post.</h3>
    <form class="form signup-form" id="add-post">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" />
      </div>
      <div class="form-group">
        <label for="post-area">Content:</label>
        <textarea class="form-input" type="text" id="post-area"></textarea>
      </div class="card">
      <button class="btn btn-secondary edit">Submit Post</button>
      </form>
      <a  href="/api/dashboard">Go Back to Dashboard</a>
  </div>
</div>


{{/if}}

<script src="/scripts/add-post.js"></script>